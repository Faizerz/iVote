<div class="box">
  <div class="is-centered" style="text-align: center; margin-bottom:35px;">
    <h1 style="font-size:1.8em">
      <b>All Users</b>
    </h1>
    <h2 style="font-size:1.2em; margin-bottom:10px;">Username -
      <%= current_user.username.capitalize %></h2>
    <a href="#">
      <button class="button is-primary" style="font-size:1em">Search by Username</button>
    </a>
  </div>

  <% @users = @users.sort_by{|u| u.username.downcase} %>

    <div class="columns is-multiline">
      <% @users.each do |user| %>
        <div class="column is-one-fifth">
          <div class="box">
            <%= link_to user.username.capitalize, user_path(current_user.id) %>
            <% if user.user_type != "free" %>✔️<% end %>
            <br>
            Score:
            <%= user.score %>
            <br>
            <a class="button is-info">Follow</a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
