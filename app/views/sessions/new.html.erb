
<section class="section">
	<div class="container">
		<div class="columns is-centered">
			<div class="column is-2">
				<h2 class="title is-2">Log in</h2>
          <%= form_tag(sessions_path) do %>
          <div class="field">
				  	<div class="control">
            <label class="label">Email</label>
            <i class="fas fa-envelope-open-text"></i> <%= text_field_tag :email%><br>
            </div>
            </div>
            <div class="field">
  				  	<div class="control">
            <label class="label">Password</label>
            <i class="fas fa-key"></i> <%= password_field_tag :password%><br>
            </div>
            </div>
            <%= button_tag :submit, class: "button is-primary is-hovered" %>
          <% end %>
        </div>
  		</div>
  	</div>
  </section>
