<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5 is-centered">
        <% if current_user.user_type == "free" && current_user.score < 5 %>
          <p>You need a minimum of 5 points to create a poll. Answer <%="#{5-current_user.score}"%> more polls to get enough points!</p>
        <% else%>
          <h2 class="title is-2">Create New Poll</h2>
          <%= form_for @poll do |f| %>
            <label class="label">Question</label>
            <%= f.text_field :question %><br>
            <label class="label">Answer One</label>
            <%= f.text_field :answer_one %><br>
            <label class="label">Answer Two</label>
            <%= f.text_field :answer_two %><br>
            <%= f.hidden_field :user_id, :value => current_user.id %><br>
            <%= f.submit class: "button is-primary is-hovered" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  </section>
