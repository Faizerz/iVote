
  <div class="tile is-horizontal is-12">
    <div class="tile is-parent">
      <article class="tile is-child notification is-primary">
        <h2 class="title is-3">Followers:
        </h2>
        <% current_user.followers.each do |f| %>
          <h2 class="title is-5">@<%= link_to User.find(f.follower_id).username, user_path(f.follower_id) %></h2>
        <% end %>
      </article>
      <div class="tile is-parent">
        <article class="tile is-child notification is-primary">
          <h2 class="title is-3">Following:
          </h2>
          <% current_user.following.each do |f| %>
            <h2 class="title is-5">@<%= link_to User.find(f.followed_id).username, user_path(f.followed_id) %></h2>
          <% end %>
        </article>
      </div>
    </div>
  </div>
